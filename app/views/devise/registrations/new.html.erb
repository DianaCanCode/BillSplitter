<!--<h2>Sign up</h2> -->
<div id="bill_page">  
  <div class="logo-banner">
    <h1 ></h1>
  </div>
  <div class="container-landing-page">
    <section class="page-title">
      <div id="login-text">LET'S <br>GO <br> SPLIT</div>  
    </section>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="field">
      <!--<%= f.label :first_name %><br /> -->
      <%= f.text_field :first_name,  placeholder: "First name", class:"field-style" %>
    </div>

    <div class="field">
      <!-- <%= f.label :last_name %><br /> -->
      <%= f.text_field :last_name,  placeholder: "Last name", class:"field-style" %>
    </div>

    <div class="field">
      <!--<%= f.label :email %><br />-->
      <%= f.email_field :email, autofocus: true, autocomplete: "email",  placeholder: "Email address", class:"field-style" %>
    </div>

    <div class="field">
      <!--<%= f.label :password %> -->
      <%= f.password_field :password, autocomplete: "new-password",  placeholder: "Password", class:"field-style" %>
      <% if @minimum_password_length %>
        <div id="forgot-password"><em>(<%= @minimum_password_length %> characters minimum)</em></div>
      <% end %><br />
    </div>

    <div class="field">
      <!--<%= f.label :password_confirmation %><br />-->
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password-confirmation", class:"field-style"  %>
    </div>

<%= f.file_field :profile_picture %>

    <div class="field">
      <!--<%= f.label :payment_method %><br /> -->
      <%= f.text_field :payment_method, autocomplete: "payment_method", placeholder: "Payment method", class:"field-style" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class:"login" %>
    </div>
    <br>
  <% end %>

  <%= render "devise/shared/links" %>
 </div>
</div>