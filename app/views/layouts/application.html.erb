<!DOCTYPE html>
<html>
  <head>
    <title>BillSplitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <script defer src="profile.js"></script>
  <script src="https://unpkg.com/ionicons@4.2.2/dist/ionicons.js"></script>


  </head>

  <body>

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>


<p class="navbar-text pull-right">
<% if user_signed_in? %>
  Logged in as <strong><%= current_user.email %></strong>.
  <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %> |


  <%= link_to 'Camera', new_group_bill_path, :class => 'navbar-link' %> |
    <%= link_to 'profile', profile_path(current_user.id), :class => 'navbar-link' %> |


<% else %>
  <!--<%= link_to "Sign up", new_user_registration_path, class: style="display:none;"  %> |
  <%= link_to "Login", new_user_session_path, :class => 'hidden'  %> -->
<% end %>
</p>



    <%= yield %>
  </body>
</html>


