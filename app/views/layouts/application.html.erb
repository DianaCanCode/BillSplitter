<!DOCTYPE html>
<html>
  <head>
    <title>Split</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:900" rel="stylesheet">
    <script src="https://unpkg.com/ionicons@4.2.2/dist/ionicons.js"></script>
  </head>

  <header id="banner" class="grid">
      <script src="https://unpkg.com/ionicons@4.2.2/dist/ionicons.js"></script>
<% if user_signed_in? %>
  <%= link_to new_group_bill_path, class: "btn btn-default" do %> 
    <ion-icon name="camera" style="height:50px; width:50px;"></ion-icon>
  
  <div class="logo"><h2 class="logo_text">Split</h2></div>
      
  <%= link_to profile_path(current_user.id), class: "btn btn-default" do %>
     <ion-icon name="contact", class="ion-icon"></ion-icon>
    <% end %>
         <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'logoutbutton'  %> 


    <% else %>
      <%= link_to "", new_user_registration_path, class: style="display:none;"  %> 
      <%= link_to "", new_user_session_path, :class => 'hidden'  %>
    <% end %>
<% end %>

  </header>
  <body>

  <body>    
      <%= yield %>
  </body>
</html>



