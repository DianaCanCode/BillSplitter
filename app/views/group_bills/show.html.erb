<h2>FORM Bill-Items </h2>    
  <% @items.each do |item| %>
    <%= item.name %> $<%= item.price %> 
        <%= form_with(model: BillsItem.new) do |form| %>
          <strong>Users:</strong> <%= form.select( :bill_ids, options_for_select(@users_on_group_bill), { :prompt => "Please select"}, { :multiple => true, :size => 5 })%>             
          <%= form.hidden_field :item_id, value: item[1] %>
          <%= form.submit %>  <br/><br>
        <% end %>
  <% end %>


<h2>List of Users </h2>    
    <%= form_with(model: @bill) do |form| %>
      <%= form.hidden_field :group_bill_id, value: @group_bill.id %>
      <%= form.select(:users_ids, options_for_select(@users), { :prompt => "Please select"}, { :multiple => true, :size => 5 })%>
      <%= form.submit%>
    <% end %>


